<%= form_with(model: project, local: true, html: { multipart: true }) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :project_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :project_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.text_field :date, id: :project_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :client %>
    <%= form.text_field :client, id: :project_client, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, id: :project_link, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
